.spacer{clear:both; height:1px;}
/* ----------- My Form ----------- */
.myform{

    width:96%;
    padding:14px;
}

/* ----------- stylized ----------- */
#stylized{
    border:solid 2px #30A5F2;
    background:#ebf4fb;

}
#stylized h1 {
    font-size:14px;
    font-weight:bold;
    margin-bottom: 3px;
}
#stylized p{
    font-size:11px;
    color:#666666;
    margin-bottom:10px;
    border-bottom:solid 1px #30A5F2;
}
#stylized label{
    text-align:left;
    width:73%;
    font-size: 12px;
    font-weight: normal;
    float:left;
    margin-top: 10px;
}
#stylized label span {
    display:block;
    float:left;
    margin-right:10px;
    padding-left: 0%;
    width:34%;
    text-align:right;
    line-height: 12px;
    vertical-align: middle;
    padding-top: 5px;
    font-weight: bold;
}

#stylized .small{
    color:#666666;
    display:block;
    font-size:11px;
    font-weight:normal;
    text-align:right;
    width:140px;
}
#stylized input{
    float:left;
    font-size:12px;
    padding:3px ;
    border:solid 1px #aacfe4;
    width:200px;
    margin-right: 5px;
}
#stylized textarea{
    float:left;
    font-size:12px;
    border:solid 1px #aacfe4;
    width:200px;
    text-align: left;
    padding:3px ;
}
#stylized select{
    float:left;
    font-size:12px;
    border:solid 1px #aacfe4;
    width:207px;
}
#stylized option {
    background: #ffffff;
    border: solid 1px #aacfe4;
    height: 18px;
    font-size: 12px;
}
#stylized button{
    clear:both;
    background: url(../images/menubg.gif) repeat-x;
    color: #fefefe;
    text-align:center;
    padding-left:3px;
    padding-right:3px;
    padding-top:1px;
    padding-bottom:5px;
    font-weight:bold;
    margin-top: 10px;
    margin-left: 10px;
    border:none;
    height:25px;
}
#stylized .btn {
    width:auto;
    background: url(../images/menubg.gif) repeat-x;
    color: #fefefe;
    text-align:center;
    padding-left:3px;
    padding-right:3px;
    padding-top:1px;
    padding-bottom:3px;
    margin-top: 0px;
    margin-bottom: 0px;
    font-size: 12px;
    font-weight:bold;
    border:none;
}
#stylized .controls{
    width:75%;
    text-align:center;
}
#stylized .err {
    color: red;
    width: 99%;
    text-align: left;
    font-size: 12px;
    border: 1px solid #ff0900;
    margin-bottom: 15px;
    padding : 0px;
    background: #fbd7d5;
}

#stylized h5{
    width: 40%;
    margin-left: 26%;
    text-align:left;
    font-size: 11px;
    font-weight: normal;
    color: red;
    float:left;
    padding-top:1px;
    margin-top: 0px;
    margin-bottom: 0px;
    display: none;
    letter-spacing: 1px;
}
#stylized .available {
    color: #30A5F2;
}
#stylized strong{
    padding-left: 2px;
    padding-right: 2px;
    color: red;
    font-weight: bold;
}
#stylized .successmsg {
	border:1px solid #86CDFF;
	background-color:#E9F6FF;
	padding-top:3px;
	padding-bottom:3px;
	margin-bottom:15px;
	float:left;
	color:#3469AD;
	font-size:15px;
	width:99%;
	padding-left:5px;
	font-weight:400;
        text-align: left;
}

#stylized .successmsg li {
	background:url(../images/Success.gif) no-repeat left center;
	color:#3469AD;
	list-style:none;
	list-style-position:inside;
	font-size:12px;
        padding: 0px;
        text-align: left;
        padding-left: 50px;
        padding-top: 12px;
        padding-bottom: 12px;
}
#stylized .errormsg {
	border:1px solid #E25F53;
	background-color:#FFDDDD;
	margin-bottom:15px;
	float:left;
	color:#333333;
	font-size:12px;
	width:99%;
        padding:3px 3px 3px 3px;
}
#stylized .errormsg li {
        background:url(../images/red-error.gif) no-repeat left center;
	list-style:none;
	list-style-position:inside;
	font-size:12px;
        padding: 0px;
	color:#333333;
        text-align: left;
        padding-left: 40px;
        padding-top: 10px;
        padding-bottom: 10px;
}

#stylized .inputerr{
    float:left;
    font-size:12px;
    border:solid 1px red;
    width:200px;
    margin-top: 8px;
}

#stylized .captcha {
    float:left;
    width:auto;
    padding-left: 26.2%;
    margin-top: 10px;

}
#stylized .captcha div {
    border:1px solid #aacfe4;
    height:50px;
    width:206px;
    background: #fffefe;
}
#stylized .captcha a {
  margin-left: 175px;
  width:auto;
}
#stylized .captcha :hover {
    text-decoration: underline;
    color:#30A5F2;
}
#stylized label a {
    text-decoration: none;
    border:0px none #fffefe;
    line-height: 24px;
    vertical-align: middle;
    padding:0px;
    margin-right: 0px;
}
#stylized label a:hover {
    color:#30A5F2;
    text-decoration: underline;
}
#stylized label img {
    border:0px none #fffefe;
    line-height: 22px;
    vertical-align: middle;
    padding:0px;
    margin-right: 0px;
    background-color: transparent;
}
#stylized .captchaMsg {
    color:#30A5F2;
    font-size: 12px;
    font-weight: normal;
    display:inline;
    margin-left: 26%;
    width:40%;
}

#stylized .required {
    font-size:12px;
    color:#666666;
    position: relative;
    width:180px;
    float:right;
    word-spacing: normal;
    letter-spacing: normal;
    padding-top:10px;
    padding-bottom: 10px;
    padding-left: 3px;
    padding-right: 3px;
    font-family:Verdana, Tahoma, Arial, sans-serif;
    font-style: normal;
    text-align: left;
    display:none;
}
